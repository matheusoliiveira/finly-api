{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",         // Use CommonJS em vez de NodeNext
    "moduleResolution": "node",    // Isso remove a obrigatoriedade do .js nas importações
    "outDir": "./dist",            // Onde o JS convertido vai morar
    "rootDir": "./src",
    "strict": false,               // Se você quiser que o TS seja menos rigoroso com erros simples
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}